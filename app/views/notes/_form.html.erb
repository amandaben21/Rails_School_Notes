<%= render partial: "layouts/errors", locals: { object: @note } %>

<div class="container">
 <br>
    <%= form_for @note do |f| %>
    
   
        <div class="field">
            <%= f.label :subject %><br />
            <%= f.collection_select(:subject_id, Subject.all, :id, :name, :include_blank => "Please select") %>
        </div>
    
        <br>

        <p> Or Create a New Subject:</p><br>
    
        <%= f.fields_for :subject do |sub_fields|%>
            <%= sub_fields.label :subject %>
            <%= sub_fields.text_field :name%>
        <% end %>
        <br><br>
    
        <%= f.label :lesson_name %>
        <%= f.text_field :lesson_name %>
        <br><br>
   
        <%= f.label :date %>
        <%= f.text_field :date %>
        <br><br>
    
        <%= f.label :note_entry %><br>
        <%= f.text_area :note_entry, cols:80, rows:20 %>
        <br>
        <%= f.hidden_field :user_id, value: @note.user_id %>
        <br>
        <%= f.submit %>
   
    <% end %>
</div>